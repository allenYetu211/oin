{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@libs/ui": ["libs/ui/src/index.ts"],
      "@oin/local": ["libs/local/src/index.ts"],
      "@oin/maps": ["libs/maps/src/index.ts"],
      "@oin/store": ["libs/store/src/index.ts"],
      "@oin/utils": ["libs/utils/src/index.ts"],
      "@server/*": ["./apps/oin-service/src/*"],
      "@yoota/*": ["./apps/yoota/*"],
      "@yoota/request": ["libs/request/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
